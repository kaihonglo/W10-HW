{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#f0f3fa",
  "height": 450,
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/kaihonglo/A2/main/js/ne_110m.json",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "params": [
    {
      "name": "zoom_level",
      "value": 170,
      "bind": {
        "input": "range",
        "min": 170,
        "max": 600,
        "step": 10,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [
        0,
        0
      ],
      "bind": {
        "input": "select",
        "options": [
          [
            0,
            0
          ],
          [50, 20]
        ],
        "labels": [
          "World",
          "Middle East"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equalEarth",
    "center": {
      "expr": "center_to"
    },
    "scale": {
      "expr": "zoom_level"
    }
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.ISO_A3_EH",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/kaihonglo/A2/main/data/CO2_emission.csv"
            },
            "key": "country_code",
            "fields": [
              "2019"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "field": "2019",
          "type": "quantitative",
          "title": "CO2 Emissions",
          "scale": {
            "range": [
              "#fee5d9",
              "#fcae91",
              "#fb6a4a",
              "#de2d26",
              "#a50f15"
            ],
            "type": "quantize"
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "2019",
            "type": "quantitative",
            "title": "CO2 Emissions (metric ton per capita)"
          }
        ]
      }
    }
  ],
  "config": {"view": {"stroke": null}}
}